<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- 标题 -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/purple_800"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="80dp" />

    <!-- 姓名输入框 -->
    <EditText
        android:id="@+id/editNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/titleTextView" />

    <!-- 简介输入框 -->
    <EditText
        android:id="@+id/editBioEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bio"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/editNameEditText" />

    <EditText
        android:id="@+id/editEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="xxxxx@connect.hku.hk"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/editBioEditText" />

    <EditText
        android:id="@+id/editSchoolEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Department"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/editEmailEditText" />

    <EditText
        android:id="@+id/editMajorEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Major"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/editSchoolEditText" />

    <EditText
        android:id="@+id/editRegisterYearEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Register Year"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/editMajorEditText" />

    <!-- 保存按钮 -->
    <Button
        android:id="@+id/saveProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple_500"
        android:padding="16dp"
        android:layout_below="@id/editRegisterYearEditText"/>


</RelativeLayout>