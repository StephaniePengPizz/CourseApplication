<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 课程代码 -->
    <EditText
        android:id="@+id/courseCodeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Code *"
        android:inputType="textCapCharacters"
        android:maxLines="1"/>

    <!-- 课程名称输入框 -->
    <EditText
        android:id="@+id/courseNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Name *"
        android:inputType="text" />

    <!-- 学期选择 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester *"
        android:layout_marginTop="8dp"/>

    <Spinner
        android:id="@+id/semesterSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>

    <!-- 星期选择 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day of Week *"
        android:layout_marginTop="8dp"/>

    <Spinner
        android:id="@+id/daySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>

    <!-- 开始时间 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time *"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/startTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="HH:mm (e.g. 09:00)"
        android:layout_marginTop="4dp"
        android:inputType="time"/>

    <!-- 结束时间 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time *"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/endTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="HH:mm (e.g. 11:00)"
        android:layout_marginTop="4dp"
        android:inputType="time"/>


    <!-- 课程地点输入框 -->
    <EditText
        android:id="@+id/courseLocationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Location"
        android:layout_marginTop="8dp" />

    <!-- 教师选择 (可选) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teachers"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>

    <MultiAutoCompleteTextView
        android:id="@+id/teachersEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select teachers (optional)"
        android:layout_marginTop="8dp"/>

</LinearLayout>